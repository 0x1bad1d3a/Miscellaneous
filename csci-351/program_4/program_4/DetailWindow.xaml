<Window x:Class="program_4.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="300" Width="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid Background="Black">
        <Image x:Name="image" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="UniformToFill"/>
        <TextBlock x:Name="textbox_name" HorizontalAlignment="Center" TextWrapping="Wrap" Text="NAME" VerticalAlignment="Top" Height="40" Foreground="White" Margin="0,10,0,0" FontSize="18" FontWeight="Bold"/>
        <TextBlock x:Name="textbox_description" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer lacinia odio metus, eget efficitur ex volutpat a. Phasellus dictum scelerisque felis ac varius." VerticalAlignment="Bottom" Foreground="White" Margin="10,0,10,10" FontSize="11"/>
    </Grid>
</Window>
